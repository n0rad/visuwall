<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>net.awired.visuwall</groupId>
	<artifactId>visuwall</artifactId>
	<version>0.4-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Visuwall</name>
	<description>Web application showing build and quality states of Projects in a very visual Wall</description>

	<parent>
		<groupId>net.awired.parent.parent-java</groupId>
		<artifactId>parent-java</artifactId>
		<version>1.14</version>
	</parent>

	<modules>
		<module>plugins/sonar-plugin</module>
		<module>plugins/hudson-plugin</module>
		<module>plugins/bamboo-plugin</module>
		<module>plugins/jenkins-plugin</module>
		<module>plugins/teamcity-plugin</module>
		<module>plugins/continuum-plugin</module>
		<module>plugins/demo-plugin</module>
		<module>plugins/deployit-plugin</module>

		<module>component/api</module>
		<module>component/core</module>
		<module>component/cli</module>
		<module>component/server</module>
		<module>component/web</module>

		<module>release</module>
	</modules>

	<properties>
		<bootstrap.version>1.0</bootstrap.version>
		<ajsl.version>0.5-SNAPSHOT</ajsl.version>
		<clients.version>1.2-SNAPSHOT</clients.version>

		<spring.version>3.0.5.RELEASE</spring.version>
		<spring-security.version>3.0.5.RELEASE</spring-security.version>
		<jackson.version>1.8.5</jackson.version>
		<jetty.version>6.1.26</jetty.version>

		<guava.version>r09</guava.version>
		<junit.version>4.8.2</junit.version>
		<jersey.client.version>1.4</jersey.client.version>
		<mockito.version>1.9.0-rc1</mockito.version>
		<joda.time.version>1.6.2</joda.time.version>
	</properties>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
			<comments />
		</license>
	</licenses>

	<issueManagement>
		<system>github</system>
		<url>https://github.com/awired/visuwall/issues</url>
	</issueManagement>
	<developers>
		<developer>
			<id>jsmadja</id>
			<name>Julien Smadja</name>
			<email>julien dot smadja at gmail dot com</email>
		</developer>
		<developer>
			<id>n0rad</id>
			<name>Arnaud Lemaire</name>
			<email>dev at norad dot fr</email>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git://github.com/awired/visuwall.git</connection>
		<developerConnection>scm:git:git@github.com:awired/visuwall.git</developerConnection>
		<url>http://github.com/awired/visuwall</url>
	</scm>



	<dependencyManagement>
		<dependencies>
			<!-- visuwall core modules -->
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-web</artifactId>
				<version>${project.version}</version>
				<type>war</type>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-server</artifactId>
				<version>${project.version}</version>
				<type>war</type>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-server</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-api</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-cli</artifactId>
				<version>${project.version}</version>
			</dependency>

			<!-- plugins -->
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-demo</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-hudson</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-sonar</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-bamboo</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-teamcity</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-jenkins</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-continuum</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.visuwall</groupId>
				<artifactId>visuwall-plugin-deployit</artifactId>
				<version>${project.version}</version>
			</dependency>

			<!-- clients -->
			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>clients-hudson</artifactId>
				<version>${clients.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>clients-jenkins</artifactId>
				<version>${clients.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>clients-sonar</artifactId>
				<version>${clients.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>clients-teamcity</artifactId>
				<version>${clients.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>clients-bamboo</artifactId>
				<version>${clients.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>clients-continuum</artifactId>
				<version>${clients.version}</version>
			</dependency>
			<dependency>
				<groupId>net.awired.clients</groupId>
				<artifactId>clients-deployit</artifactId>
				<version>${clients.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<version>1.8.0</version>
				<configuration>
					<header>/HEADER.txt</header>
					<strictCheck>false</strictCheck>
					<useDefaultExcludes>false</useDefaultExcludes>
					<excludes>
						<exclude>**/*.png</exclude>
						<exclude>.metadata/**</exclude>
						<exclude>.gitignore</exclude>
						<exclude>.git/**</exclude>
						<exclude>target/**</exclude>
						<exclude>.settings/**</exclude>
						<exclude>.project</exclude>
						<exclude>.classpath</exclude>
						<exclude>LICENCE.txt</exclude>
						<exclude>README.rst</exclude>
						<exclude>**/MANIFEST.MF</exclude>
						<exclude>src/main/webapp/WEB-INF/lib/**</exclude>
						<exclude>src/main/webapp/WEB-INF/classes/**</exclude>
						<exclude>src/main/webapp/images/**</exclude>
						<exclude>.externalToolBuilders/**</exclude>
						<exclude>.pmd/**</exclude>
						<exclude>src/test/resources/**</exclude>
						<exclude>src/main/webapp/js/jquery/**</exclude>
						<exclude>src/main/xsd/**</exclude>
						<exclude>infinitest.filters</exclude>
						<exclude>src/main/java/net/awired/visuwall/generated/**</exclude>
						<exclude>CHANGELOG.txt</exclude>
						<exclude>INSTALL.txt</exclude>
					</excludes>
				</configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-dependency-plugin
										</artifactId>
										<versionRange>
											[2.3,)
										</versionRange>
										<goals>
											<goal>copy-dependencies</goal>
											<goal>unpack</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-antrun-plugin
										</artifactId>
										<versionRange>
											[1.3,)
										</versionRange>
										<goals>
											<goal>run</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
